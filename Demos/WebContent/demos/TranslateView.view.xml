<core:View xmlns:core="sap.ui.core" 
           xmlns:mvc="sap.ui.core.mvc" 
           xmlns="sap.ui.commons" 
           xmlns:layout="sap.ui.commons.layout"
           controllerName="demos.TranslateView" xmlns:html="http://www.w3.org/1999/xhtml">
           
           
	<Panel width="600px" id="savePanel" collapsed="false">
	 
	    <title>
	    	<Title id="title" text="{lang>title}"  icon="images/danone.png"></Title>
	    </title>
	    
	    <layout:MatrixLayout id="details" layoutFixed="true" columns="3">
			<layout:MatrixLayoutRow>
				<layout:MatrixLayoutCell>
					<Label id="lMaterial" text="{lang>material}"></Label>
				</layout:MatrixLayoutCell>
				<layout:MatrixLayoutCell>
					<Label id="lDescription" text="{lang>description}"></Label>
				</layout:MatrixLayoutCell>
				<layout:MatrixLayoutCell>
					<Label id="lValue" text="{lang>value}"></Label>
				</layout:MatrixLayoutCell>
			</layout:MatrixLayoutRow>
		</layout:MatrixLayout>
	    
	</Panel>           
</core:View>
